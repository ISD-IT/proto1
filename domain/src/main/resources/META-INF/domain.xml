	</bean>

	<bean id="dateFormat" class="java.text.SimpleDateFormat">
		<constructor-arg value="yyyy-MM-dd" />
	</bean>


	<bean id="seller" class="org.proto1.domain.SideRole">
		<property name="sideRoleNames">
	    	<list>
	    		<bean class="org.proto1.domain.SideRoleName">
