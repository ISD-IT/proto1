<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<import resource="product.xml" />
	
	<bean id = "pigIronReceipt" class="org.proto1.domain.product.Receipt">
		<property name="product" ref="pigIron" />
		<property name="dimensionUnit" ref="metricTonn" />
		<property name="name" value="Pig Iron Receipt #1" />
		<property name="ingredients">
			<list>
				<bean class="org.proto1.domain.product.ReceiptItem">
				
				</bean>
			</list>
		</property>
	</bean>
</beans>
