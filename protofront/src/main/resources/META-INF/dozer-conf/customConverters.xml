<mappings xmlns="http://dozer.sourceforge.net" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://dozer.sourceforge.net http://dozer.sourceforge.net/schema/beanmapping.xsd">

	<configuration>
		<custom-converters>

			<converter type="org.proto1.mapper.LongRailwayConverter">
				<class-a>java.lang.Long</class-a>
				<class-b>org.proto1.domain.Railway</class-b>
			</converter>

			<converter type="org.proto1.mapper.LongUOMConverter">
				<class-a>java.lang.Long</class-a>
				<class-b>org.proto1.domain.UnitOfMeasurement</class-b>
			</converter>

			<converter type="org.proto1.mapper.CurrencyConverter">
				<class-a>java.lang.Integer</class-a>
				<class-b>org.proto1.domain.Currency</class-b>
			</converter>

			<converter type="org.proto1.mapper.LongContractConverter">
				<class-a>java.lang.Long</class-a>
				<class-b>org.proto1.domain.Contract</class-b>
			</converter>

			<converter type="org.proto1.mapper.LongPartyConverter">
				<class-a>java.lang.Long</class-a>
				<class-b>org.proto1.domain.party.Party</class-b>
			</converter>

			<converter type="org.proto1.mapper.LongOrganizationUnitConverter">
				<class-a>java.lang.Long</class-a>
				<class-b>org.proto1.domain.party.OrganizationUnit</class-b>
			</converter>

			<converter type="org.proto1.mapper.LongEnterpriseConverter">
				<class-a>java.lang.Long</class-a>
				<class-b>org.proto1.domain.party.Enterprise</class-b>
			</converter>

			<converter type="org.proto1.mapper.LongProductTypeConverter">
				<class-a>java.lang.Long</class-a>
				<class-b>org.proto1.domain.product.ProductType</class-b>
			</converter>

			<converter type="org.proto1.mapper.LongProductConverter">
				<class-a>java.lang.Long</class-a>
				<class-b>org.proto1.domain.product.Product</class-b>
			</converter>

			<converter type="org.proto1.mapper.LongSideRoleConverter">
				<class-a>java.lang.Long</class-a>
				<class-b>org.proto1.domain.SideRole</class-b>
			</converter>

			<converter type="org.proto1.mapper.LongLanguageConverter">
				<class-a>java.lang.Long</class-a>
				<class-b>org.proto1.domain.Language</class-b>
			</converter>

			<converter type="org.proto1.mapper.LongUOMConverter">
				<class-a>java.lang.Long</class-a>
				<class-b>org.proto1.domain.UnitOfMeasurement</class-b>
			</converter>

			<converter type="org.proto1.mapper.LongParameterConverter">
				<class-a>java.lang.Long</class-a>
				<class-b>org.proto1.domain.product.Parameter</class-b>
			</converter>

			<converter type="org.proto1.mapper.LongProductParameterConverter">
				<class-a>java.lang.Long</class-a>
				<class-b>org.proto1.domain.product.ProductParameter</class-b>
			</converter>

			<converter type="org.proto1.mapper.LongOrderLineConverter">
				<class-a>java.lang.Long</class-a>
				<class-b>org.proto1.domain.order.OrderLine</class-b>
			</converter>

		</custom-converters>
	</configuration>

</mappings>